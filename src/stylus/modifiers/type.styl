// Variables
type-color = #333;
type-custom-font = 'Open Sans', 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif
type-font-family = sans-serif
type-font-weight = 400
// mobile
type-line-height = 1.75rem
type-font-size = 100
type-font-base = 16 * (type-font-size/100)
// mobile +
type-line-height-large = 1.75rem
type-font-size-large = 125
type-font-base-large = 16 * (type-font-size/100)

spacing-value = type-line-height

// <html />, <body />
.type--reset
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased
    text-rendering: optimizeLegibility

    hyphens: none !important

// <html />
.type--setup
    color type-color
    font type-font-weight type-font-size + "%"/type-line-height type-custom-font, type-font-family

    a
        color color-blue-light
        text-decoration none

    +respond-above(mobile)
        font type-font-weight type-font-size-large + "%"/type-line-height-large type-custom-font, type-font-family

.type--ingress
    font-size 24px
    font-weight 300
    line-height 1.3 * spacing-value

    +respond-above(mobile)
        font-size 30px

.type--ingress-baseline
    font-size 22px
    font-weight 300
    line-height spacing-value

    +respond-above(mobile)
        font-size 26px

.type--align-left
    text-align left

.type--align-right
    text-align right

.type--align-center
    text-align center

.type--light
    font-weight 200 !important

.type--regular
    font-weight 400 !important

.type--semibold
    font-weight 600 !important

.type--bold
    font-weight: 900 !important

.type--style-normal
    font-style normal !important

.type--style-italic
    font-style italic

.type--uppercase
    text-transform uppercase !important

.type--none
    text-transform none !important

.type--line-height
    line-height spacing-value

.type--smallest
    font-size 80%
    line-height spacing-value - (spacing-value / 4)

.type--small
    font-size 90%
    line-height spacing-value - (spacing-value / 4)

.type--open-sans
    font-family Open Sans !important

.type--reset-margin-bottom
    margin-bottom 0 !important

.type--reset-margin-bottom-hard
    margin-bottom -spacing-value !important

.type--reset-margin-bottom-small-hard
    margin-bottom -(spacing-value / 2) !important

.type--margin-bottom-small
    margin-bottom (spacing-value / 2) !important

.type--reset-margin-top
    margin-top 0 !important

.type--margin-top-small
    margin-top (spacing-value / 2) !important

.type--active-margin-bottom
    margin-bottom spacing-value !important

.type--active-margin-top
    margin-top spacing-value !important

// COLORS
.type--color-white
    color color-white

.type--color-white-light
    color color-white-light

.type--color-grey
    color color-grey

.type--base-font-size
    font-size 1rem !important
