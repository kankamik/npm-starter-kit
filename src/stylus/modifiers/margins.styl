// $MARGINS

margin-value = 1.75rem

.margin
    margin margin-value

.margin--t
    margin-top margin-value

.margin--r
    margin-right margin-value

.margin--b
    margin-bottom margin-value

.margin--l
    margin-left margin-value

.margin--negative-t
    margin-top -(margin-value)

.margin--negative-b
    margin-bottom -(margin-value)

.margin--large
    &.margin
        padding 2 * margin-value

    &.margin--t
        margin-top 2 * margin-value

    &.margin--r
        margin-right 2 * margin-value

    &.margin--b
        margin-bottom 2 * margin-value

    &.margin--l
        margin-left 2 * margin-value

    &.margin--negative-t
        margin-top -(2 * margin-value)

    &.margin--negative-b
        margin-bottom -(2 * margin-value)

.margin--small
    &.margin
        padding margin-value / 2

    &.margin--t
        margin-top margin-value / 2

    &.margin--r
        margin-right margin-value / 2

    &.margin--b
        margin-bottom margin-value / 2

    &.margin--l
        margin-left margin-value / 2

    &.margin--negative-t
        margin-top -(margin-value / 2)

    &.margin--negative-b
        margin-bottom -(margin-value / 2)


.margin--reset-t
    margin-top 0 !important

.margin--reset-b
    margin-bottom 0 !important

.margin--reset-l
    margin-left 0 !important

.margin--reset-r
    margin-right 0 !important
