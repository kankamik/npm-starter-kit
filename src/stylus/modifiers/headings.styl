spacing-value = 1.75rem

h1,
h2,
h3,
h4,
h5,
.heading
    font-family Open Sans
    font-weight 400

.heading--mega
    margin-top 2 * spacing-value
    margin-bottom 2 * spacing-value
    font-size 52px
    line-height 2.3 * spacing-value

    +respond-above(mobile)
        font-size 70px

h1,
.heading--h1
    margin-top 2 * spacing-value
    margin-bottom 2 * spacing-value
    font-size 46px
    font-weight 300
    line-height 2 * spacing-value

    +respond-above(mobile)
        font-size 54px

h2,
.heading--h2
    margin-top 1.5 * spacing-value // 28 / 4 * 6 = 42
    margin-bottom spacing-value
    font-size 38px
    font-weight 300
    line-height 1.5 * spacing-value

    +respond-above(mobile)
        font-size: 44px

h3,
.heading--h3
    margin-top spacing-value
    margin-bottom -(.4 * spacing-value)
    font-size 26px
    font-weight 600
    line-height 1.2 * spacing-value

    +respond-above(mobile)
        font-size 32px

h4,
.heading--h4
    margin-top spacing-value
    margin-bottom -(.6 * spacing-value)
    font-size 16px
    font-weight 600
    line-height spacing-value

    +respond-above(mobile)
        font-size: 21px
